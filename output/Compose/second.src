
// component-based

object Editor
{
	ActionBar actionBar = ActionBar();
	Workspace workspace = Workspace();

	VisualObject Root;

	Editor Create()
	{
		actionBar.Create();
		workspace.Create();
		Root =
			<block width=700px height=500px>
				<block>actionBar.Root.Visual</block>
				<block height=400px>
					<column width=65%>workspace.Root.Visual</column>
					<column width=35%>"navigation"</column>
				</block>
				<block height=125px>"status"</block>
			</block>
		;
		return this;
	}
}

