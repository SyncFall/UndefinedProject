object ActionBar
{	
	Select solutionSelect = Select();
	Select runSelect = Select();
	VisualObject Root;
	
	ActionBar Create()
	{
		solutionSelect.Create();
		runSelect.Create();
		Root = 
			<block>
				<inline>solutionSelect.Root.Visual</inline>
				<inline>runSelect.Root.Visual</inline>
			</block>
		;
		return this;
	}
}

object Workspace
{
	VisualObject Root;

	Workspace Create()
	{ 
		Root = 
			<scroll>
				<block width=800px height=1500px></block>
			</scroll>
		;
		return this;
	}
}

object Select
{
	VisualObject Root;

	Select Create()
	{  
		Root = <inline>"select"</inline>;
		return this;
	}
}
